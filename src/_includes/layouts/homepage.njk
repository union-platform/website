{% extends "base.njk" %}

{% block content %}

    <section class="site-hero">
      <div class="homepage-hero-blob"></div>
      <div class="container big-zindex">
        <div class="row">
          <div class="col-lg-10 mx-auto">
            <div class="site-hero-content text-center">
              <h1>
                We <span class="hero-special-word">unite</span> people
                <br>
                {{hero.title.secondPara}}
              </h1>
              <p>
                {{hero.title.subhead}}
              </p>
              <ul class="site-hero-content-buttons">
                <li>
                  <a href="{{hero.connectBtn.link}}" class="btn btn-primary">
                    <span class="btn-area">
                      <span data-text="{{hero.connectBtn.text}}">
                        {{hero.connectBtn.text}}
                      </span>
                    </span>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <a href="#features" class="site-hero-scroll scroll-to">
        <img src="/assets/images/arrow-down.svg" alt="arrow-down">
      </a>
    </section>

