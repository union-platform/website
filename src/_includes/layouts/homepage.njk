    </section> #}

   <section class="site-project" id="features">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>{{features.subTitle}}</h2>
              <p>{{features.title}}</p>
            </div>
          </div>
          {% for feature in collections.features %}
          <div class="col-lg-6 col-md-10 mx-auto">
            <div class="site-project-item">
              <div class="site-project-item-thumb">
                <img src="{{feature.data.img}}" alt="project-thumb">
              </div>
              <div class="site-project-item-content">
                <h3>{{feature.data.title}}</h3>
                <span>{{feature.data.subTitle}}</span>
              </div>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <section class="site-testimonial">
      <div class="container">
        <div id="commits-row" class="row">
          <div class="col-12">
            <div class="section-title">
              <h2>
                {{commits.title}}
              </h2>
              <p>
                {{commits.des}} 
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

{% endblock %}